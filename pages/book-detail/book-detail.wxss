/* pages/book-detail/book-detail.wxss */
.container {
  width: 100%;
  background-color: #f5f5f5;
}

.head {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  background-color: #fff;
}

.title {
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;
  color: #2f2f2f;
}

.shadow {
  color: #999;
}

.author {
  font-size: 28rpx;
  color: #999;
}

.head image {
  width: 200rpx;
  height: 300rpx;
  box-shadow: 4rpx 4rpx 6rpx #e3e3e3;
}

.sub-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  padding: 30rpx;
  width: 690rpx;
  background-color: #fff;
}

.comment-container {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding: 0 30rpx;
  width: 100%;
}

.content {
  font-weight: 500;
  text-indent: 58rpx;
  color: #000;
}

