.headline {
  /* margin-top:30rpx; */
  margin-bottom: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
}

.post-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  /* z-index: 99; */
  position: fixed;
  bottom: 0;
  box-shadow: 1px -1px 1px #e3e3e3;
  width: 690rpx;
  height: 100rpx;
  padding: 0 30rpx;
  background-color: #fff;
}

.post-fake {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 20rpx;
  border-radius: 15px;
  border: 1px solid #999;
  height: 60rpx;
  width: 460rpx;
  font-size: 22rpx;
}

.post {
  margin: 30rpx auto;
  padding-left: 25rpx;
  height: 56rpx;
  width: 690rpx;
  border-radius: 15px;
  background-color: #f5f5f5;
}

.posting-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 999;
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
}

.like {
  margin-right: 30rpx;
  margin-top: 10rpx;
}

.like-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.share-btn {
  margin-top: 28rpx;
  margin-left: 10rpx;
}

.share {
  width: 40rpx;
  height: 40rpx;
}

.posting-container .comment-container {
  padding: 0 30rpx;
  width: 690rpx;
}

.post-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  width: 100%;
  height: 100rpx;
}

.post-header > text:first-child {
  font-size: 28rpx;
  color: #bbb;
}

.cancel {
  color: #666;
}

.post-header text {
  padding: 25rpx;
}

.num {
  margin-left: 5px;
  font-size: 22rpx;
  color: #aaa;
}

.comment-container > tag-cmp:nth-child(1) view {
  background-color: #fffbdd;
}

.comment-container > tag-cmp:nth-child(2) view {
  background-color: #eefbff !important;
}

.tag {
  margin-right: 15rpx;
  margin-bottom: 10rpx;
  border-radius: 30px !important;
}

.ex-tag1 {
  background-color: #fffbdd !important;
}

.ex-tag2 {
  background-color: #eefbff !important;
}

.posting-container .comment-container {
  padding: 40rpx 30rpx 0 30rpx;
}

.detail-contaner {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-bottom: 100rpx;
  width: 100%;
  font-size: 28rpx;
  color: #666;
}

.vertical {
  display: flex;
  flex-direction: column;
}

.vertical-1 {
  align-items: flex-end;
}

.description {
  margin-right: 30rpx;
  color: #999;
}

.tip {
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  width: 694rpx;
  height: 130rpx;
}
